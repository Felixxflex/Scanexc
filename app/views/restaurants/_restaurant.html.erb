
  <% restaurants.each do |restaurant| %>
    <h3><%= restaurant.business_title %></h3>
    <p><%= restaurant.business_description %></p>
    <button class="btn-primary">
      <%= restaurant.business_opening %>
    </button>
    <button class="btn-danger">
      <%= restaurant.business_rating %>
    </button>
  <% end %>
