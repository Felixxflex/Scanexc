<html style='background-color: #20E0B2 !important; overflow: auto !important;'>
<body style='background-color: #20E0B2 !important; overflow: auto !important;'>
<div class="formceleb">
      <%= simple_form_for @sport do |f| %>

      <div class="form-inputs">
        <%= f.label :title, class: 'text-white' %>
        <%= f.input :title %>
        <%= f.label :winpoints, class: 'text-white' %>
        <%= f.input :winpoints %>
        <%= f.label :photo, class: 'text-white' %>
        <%= f.input :photo, as: :file %>
        <%= f.label :description, class: 'text-white' %>
        <%= f.text_field :description %>
      </div>


        <%= f.submit "Submit offer", class: "btn btn-primary btn-block" %>

      <% end %>

</div>
</body>
</html>