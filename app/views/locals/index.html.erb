<html style='background-color: #20E0B2 !important; overflow: auto !important;'>
<body style='background-color: #20E0B2 !important; overflow: auto !important;'>


<div class="searchfunction">
 <%= search_form_for @q do |f| %>
  <div class="col">
    <%= f.text_field :business_title_cont, class: 'form-control', placeholder: "Search..." %>
    <%= link_to "Clear", locals_path, class: "btn btn-danger btn-block", id: 'locogobtn', remote: :true %>

  </div>
<%end%>
</div>





<%@locals.each do |local|%>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card23 p-3" style="border-radius: 1.25rem !important;">
                <div class="d-flex flex-row mb-3">
                <% if local.business_image.attached? %>
                <%= cl_image_tag local.business_image.key, class: "profile-pic2" %>
                <% end %>
                <%= link_to local_path(local) do %> 
                    <div class="d-flex flex-column ml-2"><span class="cooltitle"><%=local.business_title%></span><span class="text-black-50">Scans : <%=local.total_scans%></span><span class="ratings"></span></div>
                </div>
                <h6 class="descriptionh6"><%=local.business_description%></h6>
                <%end%>
                <div class="d-flex justify-content-between install mt-3"><span>Open : <%=local.business_opening%></span><span class="text-primary"></span></div>
            </div>
        </div>
    </div>
</div>
<%end%>
</body>
</html>
