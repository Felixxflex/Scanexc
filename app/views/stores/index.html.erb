<html style='background-color: #20E0B2 !important'>
<body style='background-color: #20E0B2 !important'>


    <% @stores.aggs["business_category"]["buckets"].sort_by{ |b| b["key"] }.reverse.each do |bucket| %>
      <div class="newsearchfunc"> 
        <% if params[:business_category] == bucket["key"].to_s %>
          <strong><%= link_to bucket["key"], request.params.except(:business_category) %></strong>
        <% else %>
          <%= link_to bucket["key"], request.params.merge(business_category: bucket["key"]) %>
        <% end %>
        (<%= bucket["doc_count"] %>)
      </div>
    <% end %>


<%@stores.each do |store|%>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card23 p-3" style="border-radius: 1.25rem !important;">
                <div class="d-flex flex-row mb-3">
                <% if store.business_image.attached? %>
                <%= cl_image_tag store.business_image.key, class: "profile-pic2" %>
                <% end %>
                <%= link_to store_path(store) do %> 
                    <div class="d-flex flex-column ml-2"><span class="cooltitle"><%=store.business_title%></span><span class="text-black-50">Scans : <%=store.total_scans%></span><span class="ratings"></span></div>
                </div>
                <h6 class="descriptionh6"><%=store.business_description%></h6>
                <%end%>
                <div class="d-flex justify-content-between install mt-3"><span>Open : <%=store.business_opening%></span><span class="text-primary"></span></div>
            </div>
        </div>
    </div>
</div>
<%end%>
</body>
</html>
